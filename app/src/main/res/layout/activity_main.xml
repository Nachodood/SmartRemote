<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_welcome"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_connect" />

    <Button
        android:id="@+id/btn_view_gestures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_view_gestures" />

    <Button
        android:id="@+id/btn_sensor_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_acceleration_and_orientation" />

    <Button
        android:id="@+id/btn_available_sensors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_list_available_sensors" />

    <ListView
        android:id="@+id/list_available_sensors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="15dp" />

</androidx.appcompat.widget.LinearLayoutCompat>