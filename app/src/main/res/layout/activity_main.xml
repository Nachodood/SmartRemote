    <Button
        android:id="@+id/btn_calibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibrate_gestures" />

    <TextView
        android:id="@+id/txt_yaw_val"
        android:layout_width="wrap_content"
